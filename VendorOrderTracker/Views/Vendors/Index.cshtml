@using VendorOrderTracker.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
}

@foreach (Vendor vendor in Model)
{
  <h3>
    <a href="/vendors/@vendor.Id">@vendor.Name</a>
    <a href="/vendors/@vendor.Id">@vendor.Description</a>
  </h3>
}

<p>
  <a href="/">Back to Home Page</a>
</p>