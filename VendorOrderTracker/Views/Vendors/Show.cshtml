@using VendorOrderTracker.Models;

<h1>Here are all the Orders for this Vendor:</h1>

<ol>
  @foreach (Order order in @Model["orders"])
  {
    <li>
      <a href="/vendors/@Model["vendor"].Id/orders/@order.Id">@order.Date</a>
    </li>
  }
</ol>

<p>
  <a href="/vendors/@Model["vendor"].Id/orders/new">Add a New Order</a>
</p>

<p>
  <a href="/vendors">Return to Vendor List</a>
</p>

<p>
  <a href="/">Return to Home Page</a>
</p>